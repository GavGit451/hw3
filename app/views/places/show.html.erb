<h1><%= @place["name"]%> </h1>

<ul>
  <% for post in @posts %>
    <li>
      <% place = Place.find_by({"id" => post["place_id"]}) %>
      <%= post["title"] %> <%= post["created_at"] %> @ <%= place["name"]%>
    <li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>